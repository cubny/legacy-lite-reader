          <div class="feedtitle">Unread</div>
        </li>
        <li id="starred" class="feed">
          <div class="count"><?php echo $starred_count>0?"<span>".$starred_count."</span>":""; ?></div> 
          <i class="icon-star"></i>
          <div class="feedtitle">Starred</div>
        </li>

      <?php foreach($feeds as $feed): ?>
        <li class="feed" id="<?php echo $feed->id?>">
            <?php $parsed = parse_url($feed->link); ?>
          <div class="count"><?php echo $feed->unread>0?"<span>".$feed->unread."</span>":""; ?></div>            
          <img src="http://api.byi.pw/favicon?url=<?php echo $feed->url; ?>
